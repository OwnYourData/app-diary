<div class="container">
	<div class="row">
		<div class="col-md-12">
		    <% flash.each do |message_type, message| %>
		        <div class="alert alert-<%= message_type %>"><%= message %></div>
		    <% end %>
	</div>
	</div>

	<p><%= t('general.enterPassword') %></p>
	<%= form_with url: diary_path, role: "form" do |form| %>
		<%= form.hidden_field :PIA_URL, value: @pia_url %>
		<%= form.hidden_field :APP_KEY, value: @app_key %>
		<%= form.hidden_field :APP_SECRET, value: @app_secret %>
		<%= form.password_field :password %>
		<%= form.button t('general.submit') %>
		<div class="form-group" style="margin-left: 20px;">
			<div class="checkbox pull-left" style="margin-bottom: 0;">
				<%= form.check_box :remember, style: "width: inherit;" %>
				<%= t('general.remember') %>
			</div>
		</div>
	<% end %>
</div>
